package UNIVERSAL;
    use vars qw($AUTOLOAD);
    sub AUTOLOAD {
        my ($self, $content, $key) = @_;
        #print $content . "\n";
        #print $key . "\n";
        #print $AUTOLOAD . "\n";
        my $called = $AUTOLOAD =~ s/.*:://;
        my ($base, $algo) = $called =~Â m/(.*)_(.*)/;
        return $self->{"_".$base."_x"}->($algo, $content, $key);
    }
    sub DESTROY { }


1;
